<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Work_Notification.Work_Manager">

    <Button
        android:id="@+id/workmag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="319dp"
        android:text="Start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/workmag"
        tools:layout_editor_absoluteX="237dp">

        <TextView
            android:id="@+id/worktest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          
            android:textSize="30sp"

            android:ems="10"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/workmag"
            app:layout_constraintTop_toBottomOf="@+id/workmag" />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>